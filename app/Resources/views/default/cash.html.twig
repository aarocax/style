{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block pageTitle %}
    <div class="row">
        <div class="col-md-12"><h2>Cash</h2></div>
    </div>
    <hr />
{% endblock %}

{% block main %}
  <div class="row">
    <div class="col-md-12">
      <!-- Advanced Tables -->
      <div class="panel panel-default">
        <div class="panel-heading">
            Schedules list
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-8">
              <div class="row">
                <div class="col-sm-4 text-center">T. Cash</div>
                <div class="col-sm-4 text-center">T. Debt</div>
                <div class="col-sm-4 text-center">In Cash</div>    
              </div>  
            </div>
            <div class="col-sm-4"></div>
          </div>
          <div class="row">
            <div class="col-sm-8">
              <div class="row">
                <div class="col-sm-4 text-center"><span id="totalCash"></span> €</div>
                <div class="col-sm-4 text-center"><span id="totalDebt"></span> €</div>
                <div class="col-sm-4 text-center"><span id="inCash"></span> €</div>
              </div>
            </div> 
            <div class="col-sm-4">
              <form class="" action="{{ path('cash') }}" method="POST">
                <div class="input-group">
                  <input type="date" id="appbundle_date_fecha" name="date" required="required" tabindex="1" value="{{ date }}" class="form-control input-sm">
                  <span class="input-group-btn">
                    <button class="btn btn-default btn-sm" type="submit"><i class="fa fa-search"></i></button>
                  </span>
                </div>
              </form>
            </div>
          </div>
          <hr>
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTable-schedule">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Date</th>
                  <th>Name</th>
                  <th>Paid</th>
                  <th>Debt</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for appointment in appointments %}
                  <tr>
                    <td><a href="">{{ appointment.id }}</a></td>
                    <td>{{ appointment.appointmentDate|date('Y-m-d') }}</td>
                    <td>{{ appointment.customer.name }} {{ appointment.customer.lastName}}</td>
                    <td>{{ appointment.paid }} </td>
                    <td><span class="debt">{{ appointment.debt }}</span> €</td>
                    <td>
                        <a href=""><i class="fa fa-search fa-fw"></i></a>
                        <a href=""><i class="fa fa-edit fa-fw"></i></a>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="6">
                      <div class="table-responsive">
                        <table class="table">
                          <thead>
                            <tr>
                              <th>S. Hour</th>
                              <th>F. Hour</th>
                              <th>Service</th>
                              <th>Staff</th>
                              <th>Price</th>
                              <th>S. Off</th>
                              <th>Total</th>
                            </tr>
                          </thead>
                          <tbody>
                            {% for schedule in appointment.schedules %}
                              <tr>
                                <td>{{ schedule.startingHour|date('H:i:s') }}</td>
                                <td>{{ schedule.finishHour|date('H:i:s') }}</td>
                                <td>{{ schedule.service.name }}</td>
                                <td>{{ schedule.staff.name }} {{ schedule.staff.lastName }}</td>
                                <td>{{ schedule.price }} €</td>
                                <td>{{ schedule.discount }} %</td>
                                <td><span class="total">{{ schedule.price - (schedule.price * (schedule.discount / 100)) }}</span> €</td>
                              </tr>
                            {% endfor %}                    
                          </tbody>
                        </table>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
      function getTotal($id) {
        var $total = document.getElementsByClassName($id);
        var $suma = 0;
        for (var i = $total.length - 1; i >= 0; i--) {
          $suma += parseFloat($total[i].innerHTML);
        }
        return $suma;
      }

      function AppLoad() {
        var $total = getTotal('total');
        var $debt = getTotal('debt');
        document.getElementById('totalCash').innerHTML = $total;
        document.getElementById('totalDebt').innerHTML = $debt;
        document.getElementById('inCash').innerHTML = $total - $debt;
      }

      var indices = new Array();
      window.addEventListener('load', AppLoad, false);
    </script>

{% endblock %}
