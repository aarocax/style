								                                </form>
							                                </center>
							                            {% endif %}
							                        </td>
			                        				<td>
			                        					{% if sala['semana']['Viernes'][h]['idCita'] %}
			                        						<center>
							                                	<a href="" class="btn btn-default btn-xs calendar-buttons appointment" data-toggle="popover" title="{{ sala['semana']['Viernes'][h]['nombreCita'] }}">{{ sala['semana']['Viernes'][h]['nombreCita'] }}</a>
							                                </center>
							                            {% else %}
							                                <center>
								                                <form action="{path(appointment_new}" method="post">
								                                	<input type="hidden" name="date" value="{{sala['semana']['fechaViernes']}}"/>
								                                	<input type="hidden" name="time" value="{{sala['semana']['Viernes'][h]['horaCita']}}"/>
