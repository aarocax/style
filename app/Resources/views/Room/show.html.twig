{% extends 'base.html.twig' %}

{% block pageTitle %}
    <div class="row">
        <div class="col-md-12"><h2>Rooms</h2></div>
    </div>
    <hr />
{% endblock %}

{% block main %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{room.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('room') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('room_edit', { 'id': room.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
