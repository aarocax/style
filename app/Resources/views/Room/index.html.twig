{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block pageTitle %}
    <div class="row">
        <div class="col-md-12"><h2>Rooms</h2></div>
    </div>
    <hr />
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Rooms list
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTable-room">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for room in rooms %}
                                    <tr>
                                        <td><a href="{{ path('room_show', { 'id': room.id }) }}">{{ room.id }}</a></td>
                                        <td>{{ room.name }}</td>
                                        <td>{{ room.description }}</td>
                                        <td>
                                            <a href="{{ path('room_show', { 'id': room.id }) }}"><i class="fa fa-search fa-fw"></i></a>
                                            <a href="{{ path('room_edit', { 'id': room.id }) }}"><i class="fa fa-edit fa-fw"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('room_new') }}" class="btn btn-primary">Create a new entry</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable-room').dataTable();
        });
    </script>

{% endblock %}
