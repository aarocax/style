{% extends 'base.html.twig' %}

{% block pageTitle %}
    <div class="row">
        <div class="col-md-12"><h2>Customers</h2></div>
    </div>
    <hr />
{% endblock %}

{% block main %}
  <table class="record_properties">
      <tbody>
          <tr>
              <th>Id</th>
              <td>{{ customer.id }}</td>
          </tr>
          <tr>
              <th>Name</th>
              <td>{{ customer.name }}</td>
          </tr>
          <tr>
              <th>Lastname</th>
              <td>{{ customer.lastName }}</td>
          </tr>
          <tr>
              <th>Address</th>
              <td>{{ customer.address }}</td>
          </tr>
          <tr>
              <th>Phone</th>
              <td>{{ customer.phone }}</td>
          </tr>
          <tr>
              <th>Date</th>
              <td>{{ customer.date|date('Y-m-d H:i:s') }}</td>
          </tr>
      </tbody>
  </table>

  <table class="record_properties">
  {% for schedule in schedules %}
    <tr>
      <td colspan="" rowspan="" headers="">{{ schedule.appointment }}</td>
      <td colspan="" rowspan="" headers="">{{ schedule.id }}</td>
      <td colspan="" rowspan="" headers="">{{ schedule.scheduleDate|date('Y-m-d H:i:s') }}</td>
      <td colspan="" rowspan="" headers="">{{ schedule.service }}</td>
      <td colspan="" rowspan="" headers="">{{ schedule.room }}</td>
    </tr>
  {% endfor %}
  </table>

  <ul class="record_actions">
      <li>
          <a href="{{ path('customer') }}">
              Back to the list
          </a>
      </li>
      <li>
          <a href="{{ path('customer_edit', { 'id': customer.id }) }}">
              Edit
          </a>
      </li>
      <li>
          <a href="{{ path('customer_get_schedules', { 'id': customer.id }) }}">
              See all Schedules
          </a>
      </li>

  </ul>
  {{ form(delete_form) }}
{% endblock %}
