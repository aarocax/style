{% extends '::base.html.twig' %}

{% block pageTitle %}Staff{% endblock %}

{% block main %}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ staff.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ staff.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ staff.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ staff.phone }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ staff.date|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('staff') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('staff_edit', { 'id': staff.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
