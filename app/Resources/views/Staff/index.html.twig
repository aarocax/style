{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}">

{% endblock %}

{% block pageTitle %}Staffs{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Staffs list
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTable-staff">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Lastname</th>
                                    <th>Phone</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for staff in staffs %}
                                    <tr>
                                        <td><a href="{{ path('staff_show', { 'id': staff.id }) }}">{{ staff.id }}</a></td>
                                        <td>{{ staff.name }}</td>
                                        <td>{{ staff.lastName }}</td>
                                        <td>{{ staff.phone }}</td>
                                        <td>{% if staff.date %}{{ staff.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>
                                            <a href="{{ path('staff_show', { 'id': staff.id }) }}"><i class="fa fa-search fa-fw"></i></a>
                                            <a href="{{ path('staff_edit', { 'id': staff.id }) }}"><i class="fa fa-edit fa-fw"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('staff_new') }}" class="btn btn-primary">Create a new entry</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable-staff').dataTable();
        });
    </script>

{% endblock %}
