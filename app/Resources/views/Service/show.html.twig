{% extends 'base.html.twig' %}

{% block pageTitle %}
    <div class="row">
        <div class="col-md-12"><h2>Services</h2></div>
    </div>
    <hr />
{% endblock %}

{% block main %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ service.time }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ service.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('service') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('service_edit', { 'id': service.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
